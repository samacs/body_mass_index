<%= form_for @user, url: login_path, method: :post do |f| %>
  <div class="form-group control control-material">
    <%= f.email_field :email, class: 'form-control', required: true %>
    <%= f.label :email, t('views.sessions.form.label.email'), class: 'control-label' %>
  </div>
  <div class="form-group control control-material">
    <%= f.password_field :password, class: 'form-control', required: true %>
    <%= f.label :password, t('views.sessions.form.label.password'), class: 'control-label' %>
  </div>
  <%= f.submit 'Log in', class: 'btn btn-rounded btn-ghost-1', data: { 'loading-text' => 'Wait...' } %>
<% end %>

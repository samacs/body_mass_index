<h3>Log in</h3>
<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :email, t('views.sessions.form.label.email') %>
  <%= f.email_field :email %>
  <br />
  <%= f.label :password, t('views.sessions.form.label.password') %>
  <%= f.password_field :password %>
  <br />
  <%= f.submit 'Log in', data: { disable_with: 'Wait...' } %>
<% end %>

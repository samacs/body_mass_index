<%= form_for @user, url: signup_path do |f| %>
  <div class="form-group control control-material">
    <%= f.text_field :name, class: 'form-control', required: true %>
    <%= f.label :name, t('user.new.name'), class: 'control-label' %>
  </div>
  <div class="form-group control control-material">
    <%= f.email_field :email, class: 'form-control', required: true %>
    <%= f.label :email, t('user.new.email'), class: 'control-label' %>
  </div>
  <div class="form-group control control-material">
    <%= f.password_field :password, class: 'form-control', required: true %>
    <%= f.label :password, t('user.new.password'), class: 'control-label' %>
  </div>
  <div class="form-group control control-material">
    <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
    <%= f.label :password_confirmation, t('user.new.password_confirmation'), class: 'control-label' %>
  </div>
  <%= f.submit 'Sign up', class: 'btn btn-rounded btn-ghost-1', data: { 'loading-text': 'Wait...' } %>
<% end %>
